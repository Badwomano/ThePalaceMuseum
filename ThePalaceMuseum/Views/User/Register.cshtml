@{
    Layout = null;
}
@*@model User*@
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>登录</title>
    <link href="~/Content/inputEffect.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/sign-up-login.css" rel="stylesheet" />
    <link href="~/Content/spop.min.css" rel="stylesheet" />
    <link href="~/Content/verifyCode.css" rel="stylesheet" />
    <link href="~/Content/tooltips.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.pure.tooltips.js"></script>
    <script src="~/Scripts/login.js"></script>
    <script src="~/Scripts/snow.js"></script>
    <script src="~/Scripts/spop.min.js"></script>
    <script src="~/Scripts/verifyCode.js"></script>
</head>

<body>
    <div class="LoginBox">
        <!-- 雪花背景 -->
        <div class="snow-container"></div>
        <!-- 登录控件 -->
        <div id="login">
            <input id="tab-1" type="radio" name="tab" class="sign-in hidden" checked />
            <input id="tab-2" type="radio" name="tab" class="sign-up hidden" />
            <input id="tab-3" type="radio" name="tab" class="sign-out hidden" />
            <div class="wrapper">
                <!-- 登录页面 -->
                <div class="login sign-in-htm">
                    <form action="/User/Login" method="post" class="container offset1 loginform">
                        <!-- 猫头鹰控件 -->
                        <div id="owl-login" class="login-owl">
                            <div class="hand"></div>
                            <div class="hand hand-r"></div>
                            <div class="arms">
                                <div class="arm"></div>
                                <div class="arm arm-r"></div>
                            </div>
                        </div>
                        <div class="pad input-container">
                            <section class="content">
                                <span class="input input--hideo">
                                    <input class="input__field input__field--hideo" type="text" id="login-username"
                                           autocomplete="off" placeholder="请输入用户名" tabindex="1" maxlength="15" 
                                           name="UserId"
                                           />
                                    <label class="input__label input__label--hideo" for="login-username">
                                        <i class="fa fa-fw fa-user icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                                <span class="input input--hideo">
                                    <input class="input__field input__field--hideo" type="password" id="login-password" 
                                           placeholder="请输入密码" tabindex="2" maxlength="15" 
                                           name="Password"
                                           />
                                    <label class="input__label input__label--hideo" for="login-password">
                                        <i class="fa fa-fw fa-lock icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                                <span class="input input--hideo input--verify_code">
                                    <input class="input__field input__field--hideo" type="text" id="login-verify-code"
                                           autocomplete="off" placeholder="请输入验证码" tabindex="3" maxlength="4" 
                                           name="Verification"
                                           />
                                    <label class="input__label input__label--hideo" for="login-verify-code">
                                        <i class="fa fa-fw fa-bell-o icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                                <canvas class="verify-code-canvas" id="login-verify-code-canvas"></canvas>
                            </section>
                        </div>
                        <div class="form-actions">
                            <a tabindex="5" class="btn btn-link text-muted" onclick="goto_register()">注册</a>
                            <input class="btn btn-primary" type="submit" tabindex="3" onclick="login()" value="登录" style="color:white;" />
                        </div>
                    </form>
                </div>
                <!-- 注册页面 -->
                <div class="login sign-up-htm">
                    <form action="/User/Register" method="post" class="container offset1 loginform">
                        <!-- 猫头鹰控件 -->
                        <div id="owl-login" class="register-owl">
                            <div class="hand"></div>
                            <div class="hand hand-r"></div>
                            <div class="arms">
                                <div class="arm"></div>
                                <div class="arm arm-r"></div>
                            </div>
                        </div>
                        <div class="pad input-container">
                            <section class="content">
                                <span class="input input--hideo">
                                    <input class="input__field input__field--hideo" type="text" id="register-username"
                                           autocomplete="off" placeholder="请输入用户名" maxlength="15"
                                           name="UserId" />
                                    <label class="input__label input__label--hideo" for="register-username">
                                        <i class="fa fa-fw fa-user icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                                <span class="input input--hideo">
                                    <input class="input__field input__field--hideo" type="password" id="register-password"
                                           placeholder="请输入密码" maxlength="15"
                                           name="Password" />
                                    <label class="input__label input__label--hideo" for="register-password">
                                        <i class="fa fa-fw fa-lock icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                                <span class="input input--hideo">
                                    <input class="input__field input__field--hideo" type="password" id="register-repassword"
                                           placeholder="请确认密码" maxlength="15"
                                           name="SurePassword" />
                                    <label class="input__label input__label--hideo" for="register-repassword">
                                        <i class="fa fa-fw fa-lock icon icon--hideo"></i>
                                        <span class="input__label-content input__label-content--hideo"></span>
                                    </label>
                                </span>
                            </section>
                        </div>
                        <div class="form-actions">
                            <a class="btn pull-left btn-link text-muted" onclick="goto_login()">返回登录</a>
                            <input class="btn btn-primary" type="submit" onclick="register()" value="注册" style="color:white;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @*if(Model==null)
        {
            <div>登录失败</div>
        }
        else
        {
            <div>欢迎您：@Model.UserId</div>
        }*@

    </div>
</body>

</html>